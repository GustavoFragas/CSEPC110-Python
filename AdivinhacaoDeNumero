import random
import os 

print("Antes de começar a jogar")
print()

escolha = int(input(("Selecione o nível de dificuldade: \n1 - Fácil\n2 - Médio\n3 - Difícil\n> ")))

while escolha < 1 or escolha > 3:
    escolha = int(input("Por favor digite um valor válido:\n> "))

os.system('cls' if os.name == 'nt' else 'clear')

if escolha == 1:
    chute = 0
    numero = random.randint(1, 10)
    print("O número será de 1 a 10")
    chute = int(input("Dê o seu palpite: \n> "))

    while chute < 1 or chute > 10:
        chute = int(input("Digite um valor válido: \n> "))

    while chute != numero:
        if chute < numero:
            print("Maior")
            chute = int(input("Dê o seu palpite: \n> "))
        if chute > numero:
            print("Menor")
            chute = int(input("Dê o seu palpite: \n> "))

    print("Você acertou!")

if escolha == 2:
    chute = 0
    numero = random.randint(1, 100)
    print("O número será de 1 a 100")
    chute = int(input("Dê o seu palpite: \n> "))

    while chute < 1 or chute > 100:
        chute = int(input("Digite um valor válido: \n> "))

    while chute != numero:
        if chute < numero:
            print("Maior")
            chute = int(input("Dê o seu palpite: \n> "))
        if chute > numero:
            print("Menor")
            chute = int(input("Dê o seu palpite: \n> "))

    print("Você acertou!")

if escolha == 3:
    chute = 0
    numero = random.randint(1, 1000)
    print("O número será de 1 a 1000")
    chute = int(input("Dê o seu palpite: \n> "))

    while chute < 1 or chute > 1000:
        chute = int(input("Digite um valor válido: \n> "))

    while chute != numero:
        if chute < numero:
            print("Maior")
            chute = int(input("Dê o seu palpite: \n> "))
        if chute > numero:
            print("Menor")
            chute = int(input("Dê o seu palpite: \n> "))

    print("Você acertou!")